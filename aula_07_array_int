

void setup(){
  size(300,220);
  noLoop();
}

void draw(){
  
  int[] valores = {9, 21, 33, 50, 70, 170, 85, 25, 19, 16, 75, 210};

  for (int i = 0; i < valores.length; i++) {
    //fill(valores[i]);
    //println(i + " -> " + valores[i]);
    rect(0, i*18, valores[i], 14);   // (18*i) = (ponto inicial da barra x indice i)  |  14 = (altura da barra) */
  }
  
  
  /* // A forma mais dif√≠cil de fazer
